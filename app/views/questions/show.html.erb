<h1>Show page</h1>

<p><%= @question.title %></p>
<p><%= @question.description  %></p>
<div>
<%= @question.prize %> 
|
<%= @question.response_cost %> 
</div>
<% date = @question.closing_date_and_time - DateTime.now%>
<strong>Time remaining:</strong><%= date/60/60 %>

<%= form_with model: @comment, local: true do |f| %>
    <%= f.hidden_field :question_id, value: @question.id %>
    <%= f.text_area :body, placeholder: "add a comment" %>

    <%= f.submit %>
<% end %>

<% @question.comments.each do |comment| %>
    <p><%= comment.body %></p>
    <h5><%= link_to "Delete", comment_path(comment), method: :delete%></h5>
<% end %>
