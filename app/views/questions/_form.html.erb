<%= form_with model: @question, local: true do |f| %>
  <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.label :prize %>
        <%= f.number_field :prize, step: 0.50 %>
    </p>
    <p>
        <%= f.label :response_cost %>
        <%= f.number_field :response_cost step: 0.50 %>        
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>