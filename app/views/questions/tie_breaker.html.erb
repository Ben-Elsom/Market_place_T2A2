<h1>Tie breaker</h1>
<%= winning_comments.first.question.title %>
<% @winning_comments.each do |comment|%>

  <span> Posted by: <strong><%= truncate(comment.user.username, :length => 100)%></strong></span>
    <p><%= comment.body %></p>
   <%= pluralize(comment.likes.count, "like")%>
    <% if user_signed_in? && @tie_breaker.question.user_id == current_user.id %>
            <%= button_to "like", like_path(comment), method: :post%>
    <% end %>
<% end %>